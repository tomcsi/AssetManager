  <h3>Categories</h3>
  <%= link_to "New item", new_category_path %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th width="80px"></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr>
      <td><%= category.name %></td>
      <td>
        <%= link_to edit_category_path(category.id) do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true">&nbsp;</span>
        <% end %>
        <%= link_to category_path(category.id), method: :delete do %>
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>