  <h3>Components</h3>
  <%= link_to "New component", new_component_path %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>QTY</th>
        <th>Responsible</th>
        <th width="80px"></th>
      </tr>
    </thead>
    <tbody>
      <% @components.each do |component| %>
      <tr>
      <td><%= link_to component.name, component_component_items_path(component) %></td>
      <td><%= component.category.name %></td>
      <td><%= component.items.count.to_s %></td>
      <td><%= component.responsible.name %></td>
      <td>
        <%= link_to edit_component_path(component) do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true">&nbsp;</span>
        <% end %>
        <%= link_to component_path(component), method: :delete do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        <% end %>
      </td>
      </tr>
      <% end %>
    </tbody>
  </table>