  <h3>Suppliers</h3>
  <%= link_to "New supplier", new_supplier_path %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Contact name</th>
        <th>Contact phone</th>
        <th width="80px"></th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
      <tr>
      <td><%= supplier.name %></td>
      <td><%= supplier.address %></td>
      <td><%= supplier.phone %></td>
      <td><%= supplier.contactname %></td>
      <td><%= supplier.contactphone %></td>
      <td>
        <%= link_to edit_supplier_path(supplier) do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true">&nbsp;</span>
        <% end %>
        <%= link_to supplier_path(supplier), method: :delete do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        <% end %>
      </td>
      </tr>
      <% end %>
    </tbody>
  </table>