  <h3><%= @component.name %> items</h3>
  <%= link_to "New item", new_component_component_item_path %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Asset</th>
        <th>Identification</th>
        <th>Install date</th>
        <th>Person</th>
        <th width="80px"></th>
      </tr>
    </thead>
    <tbody>
      <% @component_items.each do |component_item| %>
      <tr>
      <td><%= component_item.asset_item.name %></td>
      <td><%= component_item.identification %></td>
      <td><%= l component_item.installdate %></td>
      <td><%= component_item.installer.name %></td>
      <td>
        <%= link_to edit_component_component_item_path(@component.id, component_item.id) do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true">&nbsp;</span>
        <% end %>
        <%= link_to component_component_item_path(@component.id, component_item.id), method: :delete do %>
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>